<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65.0dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="用户注册"
                    android:textColor="@color/white"
                    android:textSize="35dip" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="28.0dip"
                android:layout_marginRight="28.0dip"
                android:layout_marginTop="45.0dip"
                android:background="@drawable/shape_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/more_itemtop_press"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="5.0dip"
                        android:text="手机号:"
                        android:textColor="@color/gray_black"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/registerUser"
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="15.0dip"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:paddingLeft="10.0dip"
                        android:textColor="#ff545454"
                        android:textSize="16.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/more_itemmiddle_press"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="5.0dip"
                        android:text="密    码:"
                        android:textColor="@color/gray_black"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/registerPswd"
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="15.0dip"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="10.0dip"
                        android:textColor="#ff545454"
                        android:textSize="16.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/more_itemmiddle_press"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="5.0dip"
                        android:text="重复密码:"
                        android:textColor="@color/gray_black"
                        android:textSize="15.0sp" />

                    <EditText
                        android:id="@+id/registerPswd2"
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="15.0dip"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="10.0dip"
                        android:textColor="#ff545454"
                        android:textSize="16.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/more_itemmiddle_press"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="5.0dip"
                        android:text="姓    名:"
                        android:textColor="@color/gray_black"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/registerName"
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="15.0dip"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:maxLength="20"
                        android:paddingLeft="10.0dip"
                        android:textColor="#ff545454"
                        android:textSize="16.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:background="@drawable/more_itembottom_press"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="5.0dip"
                        android:text="简    介:"
                        android:textColor="@color/gray_black"
                        android:textSize="16.0sp" />

                    <EditText
                        android:id="@+id/registerIntro"
                        android:layout_width="1px"
                        android:layout_height="50dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="15.0dip"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:paddingLeft="10.0dip"
                        android:textColor="#ff545454"
                        android:textSize="16.0sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="28.0dip"
                android:layout_marginRight="28.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:onClick="register"
                android:text="注 册"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
            <!-- @string/register_tip -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_btn"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="18.0dip"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/regist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/register_login"
                    android:clickable="true"
                    android:gravity="left|center"
                    android:paddingLeft="18.0dip"
                    android:paddingRight="8.0dip"
                    android:text="返回"
                    android:textColor="#ffffffff"
                    android:textSize="12.0sp" 
                    android:onClick="back"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>